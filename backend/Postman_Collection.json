{
  "info": {
    "name": "Prompt Share Hub API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5002"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Prompts",
      "item": [
        {
          "name": "Get All Prompts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/prompts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "prompts"]
            }
          }
        },
        {
          "name": "Create Prompt",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample Prompt\",\n  \"promptText\": \"Write a creative story about...\",\n  \"description\": \"A creative writing prompt\",\n  \"category\": \"Writing\",\n  \"tags\": [\"creative\", \"story\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/prompts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "prompts"]
            }
          }
        },
        {
          "name": "Get Single Prompt",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/prompts/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "prompts", ":id"]
            }
          }
        },
        {
          "name": "Update Prompt",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Prompt Title\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/prompts/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "prompts", ":id"]
            }
          }
        },
        {
          "name": "Delete Prompt",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/prompts/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "prompts", ":id"]
            }
          }
        },
        {
          "name": "Like Prompt",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/prompts/:id/like",
              "host": ["{{baseUrl}}"],
              "path": ["api", "prompts", ":id", "like"]
            }
          }
        },
        {
          "name": "Get My Prompts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/prompts/my/prompts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "prompts", "my", "prompts"]
            }
          }
        }
      ]
    }
  ]
}